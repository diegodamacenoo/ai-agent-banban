{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "types": ["@types/node"],
    "typeRoots": ["./node_modules/@types", "./"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.ts"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 